#include <cstdio> // header file
class C {
    int i = 0;
public:
    void setvalue( int value ) { i = value; }
    int getvalue() { return i; }
};

int main() {
    int i = 47;
    C o1; //class=C can use C as type 
    
    o1.setvalue(i);
    printf("value is %d\n", o1.getvalue());
    return 0;
}
