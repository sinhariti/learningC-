#include<iostream>
using namespace std;
// a pointer is datatype that holds the address of another another datatypes
int main(){  
    int a=3;
    int* b=&a;
    cout<<"the address of a is "<<&a<<endl; 
    cout<<"the address of b is "<<b<<endl; 
    cout<<"the value in b is "<<*b<<endl; 
    // & ---> address of operator
    // * ---> derefernce operator
    // a pointer to pointer
    int **c=&b;
    cout<<"the address in c is "<<c<<endl; 
    cout<<"the value of b is "<<&b<<endl; 
    cout<<"the value in c is "<<*c<<endl;
}
