#include<iostream>
using namespace std;
// a pointer is datatype that holds the address of another another datatypes
int main(){  
    int a=3;
    int* b=&a;
    cout<<"the address of a is "<<&a<<endl; 
    cout<<"the address of b is "<<b<<endl; 
    cout<<"the value in b is "<<*b<<endl; 
    // & ---> address of operator
    // * ---> derefernce operator
}
